<p style="color: green"><%= notice %></p>

<% content_for :title, "Alerts" %>

<div style="display: flex; align-items: center">
  <h1 style="margin: 0 10px 0 0;">Alerts</h1>
  <%= link_to "New alert", new_alert_path %>
</div>

<div id="alerts">
  <% @alerts.each do |alert| %>

    <%= render alert %>

    <p>
      <%= link_to "Show this alert", alert %> |

      <%= link_to "Edit this alert", edit_alert_path(alert) %>
    </p>
  <% end %>
</div>

