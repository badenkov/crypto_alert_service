<p style="color: green"><%= notice %></p>

<% content_for :title, "Alerts" %>

<h1>Alerts</h1>

<div id="alerts">
  <% @alerts.each do |alert| %>

    <%= render alert %>

    <p>
      <%= link_to "Show this alert", alert %> |

      <%= link_to "Edit this alert", edit_alert_path(alert) %>
    </p>
  <% end %>
</div>

<%= link_to "New alert", new_alert_path %>
